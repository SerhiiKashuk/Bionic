import java.time.*;
import java.time.temporal.ChronoUnit;

public class Birthday {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		LocalDate currDate = LocalDate.now();		
		LocalDate birthday = LocalDate.of(1985, 02, 15);
		
		
		long days = birthday.until(currDate, ChronoUnit.DAYS);
		long months = birthday.until(currDate, ChronoUnit.MONTHS);
		System.out.println("Day of week my birth is " + birthday.getDayOfWeek());
		System.out.println("I am " + days + " days old");
		System.out.println("I am " + months + " months old");

	}

}
